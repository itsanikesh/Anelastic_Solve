LIBDIRS =-L/opt/fftw-3.2.1/lib
LIBS    =-lfftw3

#INCLUDE DIRECTORIES
#INCDIRS =-I/usr/local/include
INCDIRS =-I/opt/fftw-3.2.1/include

#IOFLAGS
IOFLAG  =

